        android:id="@+id/bd_title"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:alpha=".8"
        android:id="@+id/txtConnect" />

</LinearLayout>